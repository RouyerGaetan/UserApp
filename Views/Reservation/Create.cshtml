@model UserApp.ViewModels.ReservationViewModel

@{
	ViewData["Title"] = "Réserver un événement";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Réservation pour l'événement</h2>

<form method="post" class="mt-4">
    <div class="form-group">
        <label for="NumberOfSeats">Nombre de places</label>
        <input type="number" id="NumberOfSeats" name="NumberOfSeats" class="form-control" min="1" max="2" value="@Model.NumberOfSeats" required />
        <small>Vous pouvez réserver entre 1 et 2 places.</small>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Confirmer la réservation</button>
</form>
