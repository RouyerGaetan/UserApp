@model List<UserApp.Models.Reservation>

@if (!Model.Any())
{
    <p>Vous n'avez encore participé à aucun événement passé.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Événement</th>
                <th>Date de l'événement</th>
                <th>Nombre de places</th>
                <th>Statut</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr>
                    <td>@(reservation.Evenement?.Titre ?? "Événement supprimé")</td>
                    <td>@reservation.Evenement?.Date.ToString("dd/MM/yyyy")</td>
                    <td>@reservation.NumberOfSeats</td>
                    <td>
                        @{
                            var statutAffiche = reservation.Evenement?.Date < DateTime.Now ? "Terminé" : reservation.Status;
                        }
                        @statutAffiche
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
