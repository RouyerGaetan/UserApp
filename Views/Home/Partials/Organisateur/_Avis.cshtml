@model List<UserApp.Models.NoteEvenement>

<h3>Test Filtre Avis</h3>

<input type="text" id="avisSearch" placeholder="Recherche..." />

<div id="avisContainer">
    <div class="avis-item" style="border:1px solid #ccc; padding:10px; margin:5px;">
        Avis 1 - Événement: Tennis - Utilisateur: Jean Dupont - Note: 5
    </div>
    <div class="avis-item" style="border:1px solid #ccc; padding:10px; margin:5px;">
        Avis 2 - Événement: Football - Utilisateur: Alice Martin - Note: 3
    </div>
    <div class="avis-item" style="border:1px solid #ccc; padding:10px; margin:5px;">
        Avis 3 - Événement: Basket - Utilisateur: Bob Lee - Note: 4
    </div>
</div>

<div id="noMatchMessage" style="color:red; display:none;">
    Aucun avis ne correspond à votre recherche.
</div>

<script>
    const input = document.getElementById('avisSearch');
    const items = document.querySelectorAll('.avis-item');
    const noMatchMessage = document.getElementById('noMatchMessage');

    input.addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase();
        let anyVisible = false;

        items.forEach(item => {
            const text = item.textContent.toLowerCase();
            const match = text.includes(searchTerm);
            item.style.display = match ? '' : 'none';
            if (match) anyVisible = true;
        });

        noMatchMessage.style.display = anyVisible ? 'none' : 'block';
    });
</script>
