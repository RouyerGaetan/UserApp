@{
    ViewData["Title"] = "Tableau de bord";
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
}

<div class="container px-2">
    <!-- Titre aligné à gauche avec padding -->
    <div class="row mt-3 mb-5">
        <div class="col">
            <h2 class="mb-0">Bienvenue @User.Identity?.Name!</h2>
        </div>
    </div>

    <!-- Section Cards centrée -->
    <div class="container-fluid d-flex justify-content-center align-items-center" style="padding-top: 30px;">
        <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">
            <!-- Card Profil -->
            <div class="col">
                <a href="@Url.Page("/Account/Manage/Index", new { area = "Identity" })" class="text-decoration-none text-dark">
                    <div class="card neumorphism text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Profil</h5>
                            <p class="card-text d-none d-md-block">Modifier vos informations personnelles.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card Mes Billets -->
            <div class="col">
                <a href="#" class="text-decoration-none text-dark">
                    <div class="card neumorphism text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Mes Billets</h5>
                            <p class="card-text d-none d-md-block">Télécharger et consulter vos réservations.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card Historique des Événements -->
            <div class="col">
                <a href="#" class="text-decoration-none text-dark">
                    <div class="card neumorphism text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Historique des Événements</h5>
                            <p class="card-text d-none d-md-block">Retrouvez tous les événements sportifs auxquels vous avez assisté !</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card Moyens de Paiement -->
            <div class="col">
                <a href="#" class="text-decoration-none text-dark">
                    <div class="card neumorphism text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Moyens de Paiement</h5>
                            <p class="card-text d-none d-md-block">Gérer vos moyens de paiement.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card Justificatifs de Tarif PMR/PSH -->
            <div class="col">
                <a href="#" class="text-decoration-none text-dark">
                    <div class="card neumorphism text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Justificatifs de Tarif PMR/PSH</h5>
                            <p class="card-text d-none d-md-block">Gérer vos justificatifs de tarif.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card Notifications -->
            <div class="col">
                <a href="#" class="text-decoration-none text-dark">
                    <div class="card neumorphism text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Notifications</h5>
                            <p class="card-text d-none d-md-block">Gérer vos notifications.</p>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Card Paramètres -->
            <div class="col">
                <a href="#" class="text-decoration-none text-dark">
                    <div class="card neumorphism text-center h-100">
                        <div class="card-body">
                            <h5 class="card-title">Paramètres</h5>
                            <p class="card-text d-none d-md-block">Gérer vos paramètres.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
