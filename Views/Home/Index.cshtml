@{
	ViewData["Title"] = "Home Page";
}

@section Styles {
	<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="hero-section d-flex justify-content-center align-items-center text-center text-white position-relative"
		 style="background-image: url('/images/relais.jfif'); background-size: cover; background-position: center; height: 500px; width: 100%; margin: 0;">

	<div class="position-relative text-center" style="z-index: 1;">
		<h1 class="display-4">Votre Plateforme de Gestion d'Événements Sportifs</h1>
		<p>Organisez, participez et vivez des expériences sportives inoubliables</p>
		<a class="btn btn-danger btn-lg mt-3" asp-area="" asp-controller="Evenement" asp-action="PageEvenement">Découvrir les événements</a>
	</div>

	<!-- Voile noir superposé -->
	<div class="background-hero-section position-absolute top-0 start-0 w-100 h-100" style="background-color: black; opacity: 0.7;"></div>
</section>

<!-- Section Services -->
<section class="py-5">
	<div class="container">
		<div class="text-center mb-5">
			<h2>Une plateforme complète pour tous les passionnés de sport</h2>
			<p class="text-muted">Que vous soyez organisateur ou participant, Guest Club vous offre tous les outils nécessaires</p>
		</div>
		<div class="row text-center">
			<!-- Service 1 -->
			<div class="col-md-4 mb-4">
				<div class="icon mb-3">
					<i class="bi bi-people" style="font-size: 50px;"></i>
				</div>
				<h4>Organisation d'Événements</h4>
				<p>Créez et gérez vos événements sportifs avec des outils professionnels.</p>
			</div>

			<!-- Service 2 -->
			<div class="col-md-4 mb-4">
				<div class="icon mb-3">
					<i class="bi bi-ticket-detailed" style="font-size: 50px;"></i>
				</div>
				<h4>Réservation Simplifiée</h4>
				<p>Réservez vos places pour tous types d'événements sportifs en quelques clics.</p>
			</div>

			<!-- Service 3 -->
			<div class="col-md-4 mb-4">
				<div class="icon mb-3">
					<i class="bi bi-geo-alt" style="font-size: 50px;"></i>
				</div>
				<h4>Événements Locaux</h4>
				<p>Découvrez les événements sportifs près de chez vous.</p>
			</div>
		</div>
	</div>
</section>

<!-- Section Communauté -->
<section class="bg-primary text-white text-center py-5">
	<div class="container">
		<h2 class="mb-3">Prêt à rejoindre la communauté ?</h2>
		<a href="/Account/Register" class="btn btn-light btn-lg">Créer un compte gratuitement</a>
	</div>
</section>

