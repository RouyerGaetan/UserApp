<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Guest Sport</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- En-tête générique -->
    <header class="navbar navbar-expand-lg navbar-dark bg-dark px-4">
        <a class="navbar-brand" href="/">Guest Sport</a>

        <div class="ms-auto">
            <span class="navbar-text text-light me-3">Bonjour, @User.Identity?.Name</span>
            <a class="btn btn-outline-light" href="/Account/Logout">Déconnexion</a>
        </div>
    </header>

    <!-- Contenu principal injecté par les vues -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
