<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - GuestSport</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/UserApp.styles.css" asp-append-version="true" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
	@RenderSection("Styles", required: false)
</head>
<body>
	<div class="d-flex flex-column min-vh-100">
		<header>
			<nav class="navbar navbar-expand-sm navbar-light bg-dark border-bottom box-shadow navbar-padding">
				<div class="container-fluid">
					<a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">GuestSport</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse">
						<ul class="navbar-nav ms-auto">
							<!-- ms-auto pour aligner à droite -->
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Evenement" asp-action="PageEvenement">Événements</a>
							</li>
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
							</li>
							@*
							@if (User.IsInRole("Admin"))
							{
								<li class="nav-item">
									<a class="nav-link text-white" asp-controller="Home" asp-action="Admin">Tableau de bord Admin</a>
								</li>
							}
							@if (User.IsInRole("User"))
							{
								<li class="nav-item">
									<a class="nav-link text-white" asp-controller="Home" asp-action="User">Tableau de bord Utilisateur</a>
								</li>
							}
							@if (User.IsInRole("Organisateur"))
							{
								<li class="nav-item">
									<a class="nav-link text-white" asp-controller="Home" asp-action="Organisateur">Tableau de bord Organisateur</a>
								</li>
							}
							*@
							<partial name="_LoginPartial" />
						</ul>
					</div>
				</div>
			</nav>
		</header>

		<main role="main" class="flex-fill">
			<div class="container-fluid pb-3">
				@RenderBody()
			</div>
		</main>
		<!-- Footer -->
		<footer class="text-center text-lg-start bg-dark text-white mt-5">
			<!-- Section: Social media -->
			<section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom border-secondary">
				<!-- Texte gauche -->
				<div class="me-5 d-none d-lg-block">
					<span>Suivez-nous sur les réseaux sociaux :</span>
				</div>

				<!-- Icônes réseaux -->
				<div>
					<a href="#" class="me-4 text-white">
						<i class="bi bi-facebook fs-5"></i>
					</a>
					<a href="#" class="me-4 text-white">
						<i class="bi bi-twitter-x fs-5"></i>
					</a>
					<a href="#" class="me-4 text-white">
						<i class="bi bi-instagram fs-5"></i>
					</a>
					<a href="#" class="me-4 text-white">
						<i class="bi bi-linkedin fs-5"></i>
					</a>
				</div>
			</section>

			<!-- Section: Liens -->
			<section>
				<div class="container text-center text-md-start mt-5">
					<div class="row mt-3">

						<!-- À propos -->
						<div class="col-md-4 col-lg-4 col-xl-4 mx-auto mb-4">
							<h6 class="text-uppercase fw-bold mb-4">
								<i class="bi bi-gem me-2"></i>Guest Sport
							</h6>
							<p>
								Plateforme de gestion d'événements sportifs. Créez, réservez, participez.
							</p>
						</div>

						<!-- Liens utiles -->
						<div class="col-md-4 col-lg-4 col-xl-4 mx-auto mb-4">
							<h6 class="text-uppercase fw-bold mb-4">Besoin d'aide ?</h6>
							<p><a asp-action="Contact" class="text-white text-decoration-none">Contactez-nous</a></p>
							<p><a asp-action="Mentions" class="text-white text-decoration-none">Mentions légales</a></p>
							<p><a asp-action="Cgu" class="text-white text-decoration-none">Conditions d'utilisation</a></p>
							<p><a asp-action="Confidentialite" class="text-white text-decoration-none">Politique de confidentialité</a></p>
						</div>

						<!-- Contact -->
						<div class="col-md-4 col-lg-4 col-xl-4 mx-auto mb-md-0 mb-4">
							<h6 class="text-uppercase fw-bold mb-4">Contact</h6>
							<p><i class="bi bi-envelope me-3"></i> contact@guestsport.com</p>
							<p><i class="bi bi-geo-alt me-3"></i> France</p>
						</div>

					</div>
				</div>
			</section>

			<!-- Copyright -->
			<div class="text-center p-4 border-top border-secondary">
				© 2025 - Guest Sport. Tous droits réservés.
			</div>
		</footer>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
